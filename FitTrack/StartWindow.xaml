<Window x:Class="FitTrack.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid Background="LightGray">
                <!-- Rubrik FitTrack -->
                <TextBlock Text="FitTrack" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Foreground="Crimson" FontFamily="Arial"/>

                <!-- Start-knapp -->
        <Button Content="START" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartButton_Click"/>
    </Grid>
</Window>
